---
import BaseHead from '@/components/BaseHead.astro'

import NavBar from '@/components/NavBar.vue'
import TheFooter from '@/components/TheFooter.vue'
import siteMeta from '@/site'

const {title: SITE_TITLE, description: SITE_DESCRIPTION} = siteMeta
import { heroImageUrl } from "@/utils/hero";

export interface Props {
  title: string
}

const { title } = Astro.props
const currentPath = Astro.url.pathname
---
<script>
  import 'uno.css'
</script>
<script src="../plugins/youtube.client.ts"></script>

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title || SITE_TITLE} description={SITE_DESCRIPTION} image={heroImageUrl} />
  </head>
  <body>
    <div>
      <!-- <div class="container mx-auto"> -->
        <div
      class="min-h-screen flex flex-col bg-white dark:bg-neutral-950 text-neutral-900 dark:text-neutral-50"
      >
        <NavBar
          class={currentPath === '/' ? 'absolute bg-transparent z-10' : ''}
          current-path={currentPath}
          client:load
        />
        <main class="shadow">
          <slot />
        </main>
        <TheFooter />
      </div>
      <!-- </div> -->
    </div>
  </body>
</html>

